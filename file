<!-- Sound Effects -->
<audio id="openSound" src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_9d7d30b9a0.mp3"></audio>
<audio id="clickSound" src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_2c8e8b7f5d.mp3"></audio>
<audio id="blessingSound" src="https://cdn.pixabay.com/download/audio/2022/02/23/audio_88d9a8df6a.mp3"></audio>

<script>
  const openSound = document.getElementById('openSound');
  const clickSound = document.getElementById('clickSound');
  const blessingSound = document.getElementById('blessingSound');

  function openCard() {
    document.getElementById('intro').style.display = 'none';
    openSound.play();
    showBlessing();
  }

  function showBlessing() {
    blessingSound.play();
    const blessingDiv = document.getElementById('blessing');
    blessingDiv.style.display = 'flex';
    blessingDiv.classList.add('shake');
    setTimeout(() => blessingDiv.classList.remove('shake'), 400);
  }
</script>

